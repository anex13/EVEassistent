<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/nav_header_height"
    android:background="@drawable/nav_bar_backgr"
    android:gravity="bottom"
    android:orientation="vertical"
    android:theme="@style/ThemeOverlay.AppCompat.Dark"
    android:id="@+id/nav_llayout">

    <ImageView
        android:id="@+id/nav_headrr_imageView"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:paddingTop="0dp"
        app:srcCompat="@drawable/c95519167_256"
        android:fadingEdgeLength="32dp"
        android:adjustViewBounds="false"
        android:cropToPadding="false"
        android:fadingEdge="horizontal|vertical"
        android:saveEnabled="false"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp" />

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/nav_header_vertical_spacing"
        android:text="TrustMe I'amIngener"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:id="@+id/nav_header_name"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toRightOf="@+id/nav_headrr_imageView"
        android:layout_marginLeft="16dp"
        app:layout_constraintVertical_bias="0.18"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintLeft_creator="1" />

    <TextView
        android:id="@+id/nav_header_corp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="KADMUS"
        tools:layout_constraintTop_creator="1"
        app:layout_constraintTop_toBottomOf="@+id/nav_header_name"
        app:layout_constraintLeft_toLeftOf="@+id/nav_header_name"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp"
        android:layout_marginTop="16dp"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintBottom_toBottomOf="@+id/nav_headrr_imageView" />

    <ImageView
        android:layout_width="0dp"
        android:layout_height="24dp"
        app:srcCompat="@drawable/skills"
        android:id="@+id/imageView"
        app:layout_constraintRight_toLeftOf="@+id/nav_header_sp"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/nav_headrr_imageView"
        app:layout_constraintLeft_toLeftOf="@+id/nav_headrr_imageView" />

    <TextView
        android:text="42 000 567 sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/nav_header_sp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView"
        app:layout_constraintTop_toTopOf="@+id/imageView"
        android:layout_marginStart="32dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/nav_headrr_imageView"
        android:layout_marginLeft="32dp" />

    <ImageView
        android:layout_width="0dp"
        android:layout_height="24dp"
        app:srcCompat="@drawable/wallet"
        android:id="@+id/imageView2"
        app:layout_constraintRight_toRightOf="@+id/imageView"
        app:layout_constraintLeft_toLeftOf="@+id/imageView"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/imageView"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintLeft_creator="1" />

    <TextView
        android:text="152 098 567 isk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/nav_header_isk"
        app:layout_constraintLeft_toLeftOf="@+id/nav_header_sp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView2"
        app:layout_constraintTop_toTopOf="@+id/imageView2" />

</android.support.constraint.ConstraintLayout>
